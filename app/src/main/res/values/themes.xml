<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Connected" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Primary colors -->
        <item name="baseColor">@color/cyan</item>
        <item name="backgroundColor">@color/white</item>
        <item name="undersideColor">@color/light_gray</item>
        <item name="primaryColor">@color/dark_gray</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/baseColor</item>

        <!-- Font -->
        <item name="android:fontFamily">sans-serif-condensed</item>

        <!-- disable animation on activity launch -->
        <item name="android:windowAnimationStyle">@null</item>

        <!-- toolbar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>