<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Connected" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <!-- Primary colors -->
        <item name="baseColor">@color/bright_purple</item>
        <item name="backgroundColor">@color/black</item>
        <item name="undersideColor">@color/dark_gray</item>
        <item name="primaryColor">@color/light_gray</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/baseColor</item>

        <!-- font -->
        <item name="android:fontFamily">sans-serif-condensed</item>

        <!-- disable animation on activity launch -->
        <item name="android:windowAnimationStyle">@null</item>
    </style>
</resources>